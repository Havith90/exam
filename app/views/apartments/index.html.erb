<br>
<h1><i class="bi bi-door-open"></i>
Apartments</h1>

<table class="table" >
  <thead>
    <tr>
      <th>Number</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        
        <td><%= apartment.number %></td><div class='col-1'>
        <td><%= apartment.building.name %></td>
        <td><%= link_to 'Show', apartment, class: 'btn btn-primary btn-small' %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment), class: 'btn btn-primary btn-small' %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path, class: 'btn btn-primary' %>
